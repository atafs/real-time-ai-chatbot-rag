{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es2015"], // Replaced esnext with es2015 for compatibility
    "allowJs": false, // Disabled unless needed
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false, // Disabled for Webpack compatibility
    "noEmit": false, // Critical fix for ts-loader
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./dist" // Added for output
  },
  "include": ["src"], // Removed cypress (handled separately)
  "exclude": ["node_modules", "dist"]
}
